<div class="container mt-3">
    <div class="jumbotron">
        <h2 class="h2">Ingrese sus datos</h2>
        <form id="newUserForm" action="/singUp" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name"><b>Nombre:</b></label>
                <input id="name" class="form-control" type="text" name="name" required>
            </div>

            <div class="form-group">
                <label for="username"><b>E-mail:</b></label>
                <input id="username" class="form-control" type="email" name="username" required>
            </div>

            <div class="form-group">
                <label for="password"><b>Contrase√±a:</b></label>
                <input id="password" class="form-control" type="password" name="password" required>
            </div>

            <div class="form-group">
                <label for="phone"><b>Celular:</b></label>
                <input id="phone" class="form-control" type="text" name="phone" required>
            </div>

            <div class="form-group">
                <label for="age"><b>Edad:</b></label>
                <input id="age" class="form-control" type="number" name="age" required>
            </div>

            <div class="form-group">
                <label for="adress"><b>Direccion:</b></label>
                <input id="adress" class="form-control" type="text" name="adress">
            </div>

            <div class="form-group">
                <label for="avatar"><b>Avatar:</b></label>
                <input id="avatar" class="form-control" type="file" name="avatar">
            </div>

            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
    {{#if error}}
        <div class="jumbotron">
            <h2 class="h5 bg-danger text-white">Usuario ya registrado.</h2>
        </div>
    {{/if}}
</div>