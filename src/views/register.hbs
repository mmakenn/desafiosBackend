<div class="container mt-3">
    <div class="jumbotron">
        <h2 class="h2">Ingrese sus datos</h2>
        <form id="newUserForm" action="/register" method="POST">
            <div class="form-group">
                <label for="username"><b>Nombre:</b></label>
                <input id="username" class="form-control" type="text" name="username" required>
            </div>

            <div class="form-group">
                <label for="email"><b>E-mail:</b></label>
                <input id="email" class="form-control" type="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="password"><b>Contrase√±a:</b></label>
                <input id="password" class="form-control" type="password" name="password" required>
            </div>

            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
    {{#if error}}
        <div class="jumbotron">
            <h2 class="h5 bg-danger text-white">Usuario ya registrado.</h2>
        </div>
    {{/if}}
</div>