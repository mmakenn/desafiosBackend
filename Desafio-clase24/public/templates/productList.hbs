{{#if productsExists}}
    <h2 class="h2"> Nuestros productos. </h2> 
    <div class="table-responsive">
        <table class="table table-secondary">
            <tr>
                {{#each headers}}
                    <th> {{title}} </th>
                {{/each}}  
            </tr>

            {{#each products}}
                <tr>
                    <td>
                        {{title}}
                    </td>
                    <td>
                        {{price}}
                    </td>
                    <td>
                        <img src={{thumbnail}} width="25px" alt="">
                    </td>
                    <td>
                        {{stock}}
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h2 class="alert alert-danger"> No hay productos </h2>
{{/if}}